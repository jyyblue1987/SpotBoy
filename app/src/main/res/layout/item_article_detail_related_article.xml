<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/related_article_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/related_article_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/related_article_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:background="@android:color/white"
        android:padding="5dp">


        <com.ninexe.ui.widgets.AnyFontTextView
            android:id="@+id/related_article_published_at"
            style="@style/Text.Very.Small"
            android:layout_alignParentBottom="true"
            android:drawableLeft="@drawable/clock_icn"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:textColor="@color/black"
            custom:typefaceAsset="fonts/OpenSans-Regular.ttf" />

        <com.ninexe.ui.widgets.AnyFontTextView
            android:id="@+id/related_article_title"
            style="@style/Text.Small"
            android:layout_above="@id/related_article_published_at"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            custom:typefaceAsset="fonts/OpenSans-Light.ttf" />

    </RelativeLayout>


</LinearLayout>